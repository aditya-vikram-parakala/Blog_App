<%- include("./partials/header") %>
<div class="ui main text container  segment">

<div class="ui huge header">New Post</div>

<form action="/blogs" method="POST" class="ui form">
    <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="title">
    </div>
    <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" id="" placeholder="image url">
    </div>
    <div class="field">
        <label>Body</label>
        <textarea name="blog[body]" type="text" cols="30" rows="10" placeholder="blog post goes here..."></textarea>
        <!-- <input type="text" placeholder="body" name="blog[body]"> -->
    </div>
<input type="date" name="blog[date]">
<button>Create</button>
</form>
</div>

<%- include("./partials/footer") %>